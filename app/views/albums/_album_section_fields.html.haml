.album_section_fields
  %fieldset.inputs
    %ol.nested-fields
      = f.input :heading
      = f.input :narrative
      = link_to_remove_fields "Delete This Section", f
      #images
        = f.semantic_fields_for :images do |builder|
          = render :partial => "image_fields", :locals => { :f => builder }
        .links
          = link_to_add_fields "Add an Inline-Image to this Section", f, :images