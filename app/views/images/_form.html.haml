= semantic_form_for @image,:html => { :multipart => true } do |form|
  -if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg
  =form.inputs do
    =form.input :resource, :as => :file, :label => "Image File"
  =form.buttons
